<table>
  <thead>
  <tr>
    <th> Product </th>
    <th> Value </th>
  </tr>
  </thead>
  <tbody>
  <% restaurant.products.each do |p| %>
    <tr>
      <%= form_tag("/orders") do%>
        <%= hidden_field_tag :product_id, p.id %>
        <td> -> <%= p.name %></td>
        <td> R$ <%= p.value %></td>
        <td><%= submit_tag "Pedir" %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>